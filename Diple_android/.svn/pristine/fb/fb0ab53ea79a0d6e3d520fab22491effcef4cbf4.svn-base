<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imgPinTimeline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/recorded_detail_pintimelinebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textRecordedDetailName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lawry&apos;s the prime"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textRecordedDetailTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:23 ~ 17:25" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

            </LinearLayout>

            <Button
                android:id="@+id/btnModify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/recorded_detail_modifybtn"
                android:minHeight="40dp"
                android:minWidth="48dp" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/recorded_detail_deletebtn"
                android:minHeight="40dp"
                android:minWidth="48dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/recorded_detail_box"
            android:orientation="vertical"
            android:padding="10dp" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Gallery
                    android:id="@+id/gallery1"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:background="@color/grey"
                    android:spacing="0dp" />

                <ImageView
                    android:id="@+id/imgPictureBoxTransparent"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/recorded_detail_picturebox_transparent" />

            </FrameLayout>

            <TextView
                android:id="@+id/textRecordedDetailComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="오빠랑 lawry&apos;s 간 날 파스타도 맛있고 스테이크도 분위기도 좋은 레스토랑 아 신나신나신나 신나 아싸 신난다 사랑한다 짱좋다" />

            <TextView
                android:id="@+id/textRecordedDetailMoreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recorded_detail_moreinfo_closed"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/grey" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
